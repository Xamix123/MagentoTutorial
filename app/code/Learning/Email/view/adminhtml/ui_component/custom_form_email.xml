<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <dataSource name="learning_email_data_source">
        <dataProvider class="Learning\Email\Ui\DataProvider" name="learning_email_data_source">
            <settings>
                <requestFieldName>user_id</requestFieldName>
                <primaryFieldName>user_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="email_details">
        <field name="user_email" formElement="input" sortOrder="10">
            <settings>
                <visible>true</visible>
                <elementTmpl>ui/form/element/input</elementTmpl>
                <label translate="true">Input field example</label>
            </settings>
        </field>

        <field name="send" sortOrder="40" formElement="button" component="Learning_Email/js/ui/send">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="title" xsi:type="string">Send</item>
                </item>
            </argument>
        </field>

    </fieldset>
</form>
