<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="custom_table" resource="default" engine="innodb" comment="RH Helloworld">
        <column xsi:type="smallint" name="id" padding="6" unsigned="false" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="smallint" name="author_id" padding="6" unsigned="false" nullable="false"  comment="author_Id"/>
        <column xsi:type="varchar" name="description" nullable="false" length="255" comment="Descrition"/>
        <column xsi:type="varchar" onCreate="migrateDataFrom(status)" name="newNameStatus" nullable="false" length="255" comment="Test3" />
        <column xsi:type="varchar" name="status" nullable="false" length="255" comment="Test2"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="ADD_REF_FOR_CUSTOM_TABLE" table="custom_table"
                    column="author_id" referenceTable="declarateSchemaForeignKeyTable" referenceColumn="id"
                    onDelete="CASCADE"/>

    </table>
    <table name="declarateSchemaForeignKeyTable" resource="default" engine="innodb" comment="FKTable">
        <column xsi:type="smallint" name="id" padding="6" unsigned="false" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="author_name" nullable="false" length="25" comment="Name"/>
        <column xsi:type="varchar" name="email" nullable="false" length="25" comment="Email"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
